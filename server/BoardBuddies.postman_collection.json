      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{temp_access_token}}",
            "description": "소셜 로그인 후 받은 임시 토큰"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"홍길동\",\n  \"birthDate\": \"2000-01-01\",\n  \"school\": \"서울대학교\",\n  \"studentId\": \"2020123456\",\n  \"gender\": \"MALE\",\n  \"phoneNumber\": \"010-1234-5678\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/signup/complete",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "signup", "complete"]
        }
      }
    },
