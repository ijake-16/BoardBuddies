      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{kakao_access_token}}",
            "description": "카카오 액세스 토큰"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/auth/social/kakao",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "social", "kakao"]
        }
      }
    },
    {
      "name": "소셜 로그인 - 네이버",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{naver_access_token}}",
            "description": "네이버 액세스 토큰"
